<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/teal_700"
    android:layout_height="match_parent"
    tools:context=".FoodActivity">

    <TextView
        android:id="@+id/bolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/imagebolo"
        android:background="@drawable/hori_rounded"
        android:fontFamily="cursive"
        android:text="      Pasta Bolognese"
        android:textSize="30dp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/imagebolo"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/pasta_bolo" />

    <TextView
        android:id="@+id/textbolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bolo"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Unlike marinara sauce, bolognese is light on the tomato. The fruit is typically used in the form of a paste, adding sweet notes to the otherwise savory, protein-packed gravy.
  Perfect for meat lovers, the sauce includes ground beef, veal, or pork, stewed in a mixture of wine, milk, celery, carrot, and the tomato paste."/>
    <Button
        android:id="@+id/selectbolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textbolo"
        android:layout_margin="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hori_rounded"
        android:text = "Select"/>


    <ImageButton
        android:id="@+id/optionbolo"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"/>

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10.75"
        android:textSize="40sp"
        android:layout_above="@+id/confirm"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/hori_rounded"
        android:text = "Confirm"/>


</RelativeLayout>